#!/bin/bash
# Pre-commit hook: Enforce formatting and zero clippy warnings
# Runs the same checks as CI to catch issues early

set -e

echo "ğŸ” Checking embedded files are in sync..."
if ! ./scripts/sync-embedded-files.sh check; then
    echo ""
    echo "âŒ Embedded files out of sync!"
    echo "   Run './scripts/sync-embedded-files.sh' and commit the generated changes."
    exit 1
fi
echo "âœ… Embedded files are in sync"

echo ""
echo "ğŸ” Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "âŒ Formatting check failed!"
    echo "   Run 'cargo fmt --all' to fix formatting issues."
    exit 1
fi
echo "âœ… Formatting OK"

echo ""
echo "ğŸ” Running clippy (warnings = errors)..."
if ! cargo clippy --all-targets --all-features -- -D warnings 2>&1; then
    echo ""
    echo "âŒ Clippy check failed!"
    echo "   Fix the warnings above before committing."
    exit 1
fi
echo "âœ… Clippy passed with no warnings!"

echo ""
echo "ğŸ‰ All pre-commit checks passed!"
