{
  "name": "hats",
  "version": "2.3.0",
  "private": true,
  "description": "AI agent orchestrator with web dashboard",
  "workspaces": [
    "backend/*",
    "frontend/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:server": "npm run build -w @hats-web/server",
    "build:web": "npm run build -w @hats-web/dashboard",
    "dev": "npm run dev --workspaces --if-present",
    "dev:server": "npm run dev -w @hats-web/server",
    "dev:web": "npm run dev -w @hats-web/dashboard",
    "start": "npm run start -w @hats-web/server",
    "test": "npm run test --workspaces --if-present",
    "test:server": "npm run test -w @hats-web/server",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "orchestrator",
    "hats"
  ],
  "author": "",
  "license": "MIT"
}
